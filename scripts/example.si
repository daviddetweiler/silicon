fn: test
	10
	while
		copy 0 >=
	do
		copy print-# nl
		copy 2 % 0= v?
		1 -
	end-while
	drop
end-fn

\ depth --
fn: recursion-test
	copy 0~=
	if
		copy print-# nl
		1 - recurse
	else
		drop
	end-if
end-fn

test
